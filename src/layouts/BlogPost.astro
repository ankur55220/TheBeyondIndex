---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, heroImage, pubDate, author } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />

		<main class="px-4 py-10 mx-auto max-w-4xl">
			<article class="prose dark:prose-invert">
				{heroImage && (
					<div class="mb-8">
						<img 
							src={heroImage} 
							alt={title} 
							class="w-full h-64 object-cover rounded-lg"
						/>
					</div>
				)}
				<header class="mb-8">
					<h1 class="text-4xl font-bold mb-2">{title}</h1>
					<div class="text-gray-500 text-sm">
						{pubDate && <time datetime={new Date(pubDate).toISOString()}>
							{new Date(pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
						</time>}
						{author && <span class="ml-2">by {author}</span>}
					</div>
				</header>
				<slot />
			</article>
		</main>


		<Footer />
	</body>
</html>
