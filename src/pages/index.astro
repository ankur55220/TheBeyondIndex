---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import heroImage from '../assets/sampl1.jpg';
---

<!doctype html>
<html lang="en" class="dark-theme">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style is:global>
			:root {
				--primary: #8b5cf6;
				--primary-dark: #7c3aed;
				--background: #0f172a;
				--text: #f8fafc;
				--text-muted: #94a3b8;
			}

			*,
			*::before,
			*::after {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html,
			body {
				width: 100%;
				overflow-x: hidden;
				margin: 0;
				padding: 0;
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
				line-height: 1.6;
				color: var(--text);
				background-color: #0f172a;
			}

			@keyframes float {
				0% { transform: translateY(0px); }
				50% { transform: translateY(-10px); }
				100% { transform: translateY(0px); }
			}

			@keyframes flicker {
				0%, 100% { opacity: 1; }
				50% { opacity: 0.7; }
			}

			.dark-theme {
				background-color: var(--background);
				color: var(--text);
				min-height: 100vh;
			}

			main {
				width: 100%;
				max-width: 100%;
				margin: 0 auto;
				padding: 1rem;
				box-sizing: border-box;
				overflow: hidden;
			}

			.hero {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 2rem;
				padding: 2rem 1rem 3rem;
				position: relative;
				overflow: hidden;
				border-radius: 1rem;
				margin: 2rem 1rem 3rem;
				background: linear-gradient(135deg, #1e1b4b 0%, #0c0a1d 100%);
				border: 1px solid rgba(167, 139, 250, 0.1);
				position: relative;
			}

			.hero::after {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: rgba(0, 0, 0, 0.6);
				z-index: 1;
			}

			.hero::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: 
					radial-gradient(circle at 20% 20%, rgba(167, 139, 250, 0.1) 0%, transparent 30%),
					radial-gradient(circle at 80% 80%, rgba(236, 72, 153, 0.1) 0%, transparent 30%);
				pointer-events: none;
			}

			.hero h1 {
				font-size: 3.5rem;
				margin-bottom: 1.5rem;
				background: linear-gradient(90deg, #ffffff, #e0e0ff);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				position: relative;
				animation: float 6s ease-in-out infinite;
				z-index: 2;
				text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
			}

			.hero p {
				font-size: 1.25rem;
				max-width: 700px;
				margin: 0 auto 2rem;
				line-height: 1.6;
				color: #cbd5e1;
			}

			.categories {
				transform: translateY(2rem);
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				margin: 3rem 0;
			}

			.category-card {
				background: rgba(30, 41, 59, 0.5);
				border: 1px solid rgba(167, 139, 250, 0.1);
				border-radius: 1rem;
				padding: 2rem;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}

			.category-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 25px -5px rgba(167, 139, 250, 0.1);
				border-color: rgba(167, 139, 250, 0.3);
			}

			.category-card h2 {
				color: #a78bfa;
				margin-bottom: 1rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.category-card p {
				color: #94a3b8;
				line-height: 1.6;
			}

			.btn {
				display: inline-block;
				padding: 0.75rem 1.5rem;
				background: linear-gradient(90deg, var(--primary), var(--accent));
				color: white;
				border: none;
				border-radius: 0.5rem;
				text-decoration: none;
				font-weight: 600;
				transition: all 0.3s ease;
				cursor: pointer;
			}

			.btn:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 15px rgba(167, 139, 250, 0.3);
			}

			.featured {
				margin: 4rem 0;
			}

			.featured h2 {
				text-align: center;
				margin-bottom: 2rem;
				font-size: 2rem;
				color: #a78bfa;
			}

			.cta-section {
				text-align: center;
				margin: 4rem 0;
				padding: 3rem 1rem;
				background: linear-gradient(135deg, #1e1b4b 0%, #0c0a1d 100%);
				border-radius: 1rem;
			}

			.cta-section h2 {
				margin-bottom: 1rem;
				font-size: 2rem;
			}

			.cta-section p {
				max-width: 600px;
				margin: 0 auto 2rem;
				color: #cbd5e1;
			}

			@media (min-width: 640px) {
				main {
					padding: 1.5rem;
				}

				.hero {
					padding: 3rem 1.5rem;
					margin: 0 0 2rem 0;
				}

				.hero h1 {
					font-size: 2.5rem;
				}

				.hero p {
					font-size: 1.25rem;
					max-width: 700px;
				}

				.categories {
					grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
					gap: 2rem;
					margin: 1rem 0 2rem;
					padding: 0 0.5rem;
					max-width: 100%;
				}

				.category-card {
					padding: 2rem;
					margin: 0;
				}
			}

			@media (min-width: 1024px) {
				main {
					max-width: 1200px;
					margin: 0 auto;
				}

				.hero {
					padding: 4rem 2rem;
					margin: 0 auto 3rem;
					max-width: 100%;
				}

				.hero h1 {
					font-size: 3rem;
				}

				.categories {
					margin: 2rem 0 3rem;
					max-width: 100%;
					padding: 0;
				}

				@media (min-width: 1280px) {
					.hero h1 {
						font-size: 3.5rem;
					}
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div style="text-align: center; max-width: 800px; margin: 0 auto; padding: 2rem 1rem; position: relative; z-index: 2;">
					<h1 style="font-size: clamp(2rem, 5vw, 3.5rem); margin-bottom: 1.5rem; line-height: 1.2;">Unveiling the Unexplained</h1>
					<p style="font-size: clamp(1rem, 2vw, 1.25rem); margin: 0 auto 2rem; color: #e0e0ff; text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8); max-width: 90%;">
						Journey through the shadows of the unknown, where cosmic mysteries, cryptid encounters, and mind-bending anomalies await your curiosity.
					</p>
					<a href="/cosmos" class="btn" style="font-size: clamp(0.9rem, 2vw, 1.1rem); padding: 0.75rem 2rem; margin-bottom: 1rem; display: inline-block; transition: transform 0.2s ease-in-out;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">Begin Exploration</a>
				</div>
				<div style="width: 95%; max-width: 1000px; margin: 0 auto; border-radius: 0.5rem; overflow: hidden; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); position: relative; z-index: 2; max-height: 70vh; min-height: 300px; display: flex; align-items: center; justify-content: center;">
					<img 
						src={heroImage.src} 
						alt="Mysterious cosmic landscape" 
						style="width: 100%; height: auto; max-height: 500px; object-fit: cover; display: block;"
						loading="lazy"
					/>
				</div>
			</section>

			<div class="categories">
				<article class="category-card">
					<h2>ðŸ”­ Cosmic Chronicles</h2>
					<p>Dive into the enigmas of the universe, from dark matter to unexplained cosmic phenomena that challenge our understanding of reality.</p>
					<a href="/cosmos" class="btn" style="margin-top: 1rem; display: inline-block;">Explore Space</a>
				</article>

				<article class="category-card">
					<h2>ðŸ‘» Mysterious Encounters</h2>
					<p>Explore ghostly apparitions and mythical creatures that challenge conventional explanations and blur the line between reality and myth.</p>
					<a href="/mysteries" class="btn" style="margin-top: 1rem; display: inline-block;">Meet the Unknown</a>
				</article>

				
			</div>

			

			
		</main>
				
		</main>
		<Footer />
	</body>
</html>
