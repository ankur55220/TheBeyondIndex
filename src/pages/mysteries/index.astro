---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import enigma from '../../assets/enigma.png'

interface HeroImage {
  src: string;
  width: number;
  height: number;
  format: 'png' | 'jpg' | 'jpeg' | 'tiff' | 'webp' | 'gif' | 'svg' | 'avif';
}

interface MysteryPost {
  id: string;
  slug: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    heroImage?: string;
    updatedDate?: Date;
  };
}

const allPosts = await getCollection('mysteries');
const mysteries = (allPosts as unknown as MysteryPost[]).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Mysteries | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Mysteries</h1>
      <p>Explore the unknown and unexplained mysteries of our world.</p>
      
      <ul class="mysteries-list">
        {mysteries.map((mystery, index) => {
          // Get the file name without extension
          const slug = mystery.id.replace(/\.(md|mdx)$/, '');
          return (
            <li class={index === 0 ? 'first-mystery' : ''}>
              <a href={`/mysteries/${slug}`}>
                {mystery.data.heroImage && (
                  <img
                    width={index === 0 ? 960 : 460}
                    height={index === 0 ? 400 : 200}
                    src={enigma.src}
                    alt=""
                    loading={index === 0 ? 'eager' : 'lazy'}
                    decoding="async"
                  />
                )}
                <h2 class={index === 0 ? 'title' : ''}>{mystery.data.title}</h2>
                <FormattedDate date={mystery.data.pubDate} />
                <p>{mystery.data.description}</p>
              </a>
            </li>
          );
        })}
      </ul>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    width: 960px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .mysteries-list {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  
  .mysteries-list li {
    width: calc(50% - 1rem);
  }
  
  .mysteries-list li a {
    text-decoration: none;
    color: inherit;
    transition: 0.2s ease;
    display: block;
  }
  
  .mysteries-list li.first-mystery {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
  }
  
  .mysteries-list li.first-mystery img {
    width: 100%;
  }
  
  .mysteries-list li.first-mystery .title {
    font-size: 2.369rem;
  }
  
  .mysteries-list li img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    margin-bottom: 0.5rem;
  }
  
  .mysteries-list li h2 {
    margin: 0.5rem 0;
    font-size: 1.2rem;
  }
  
  .mysteries-list li p {
    margin: 0.5rem 0 0;
    color: var(--theme-text-light);
    line-height: 1.5;
  }
  
  time {
    color: var(--theme-text-light);
    font-size: 0.9rem;
  }
</style>
